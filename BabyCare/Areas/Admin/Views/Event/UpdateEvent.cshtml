@model Event
@{
    ViewData["Title"] = "UpdateEvent";
    Layout = "~/Areas/Admin/Views/AdminDefault/Index.cshtml";
}

<h1>Etkinlik Güncelleme</h1>

<form method="post">
    <label>Etkinlik ID</label>
    <input type="hidden" asp-for="EventId" class="form-control" readonly />
    <br />
    <label>Başlık</label>
    <br />
    <input type="text" asp-for="EventName" class="form-control" />
    <br />
    <label>Şehir</label>
    <input type="text" asp-for="EventCity" class="form-control" />
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="EventDescription" class="form-control" />
    <br />
    <label>Resim Yolu</label>
    <input type="text" asp-for="EventImageUrl" class="form-control" />
    <br />
    <label>Tarih (GÜN/AY)</label>
    <input type="text" asp-for="EventDate" class="form-control" />
    <br />
    <label>Saat (XX.XX - XX.XX)</label>
    <input type="text" asp-for="EventTime" class="form-control" />
    <br />
    <button class="btn btn-success">Kaydet</button>
</form>