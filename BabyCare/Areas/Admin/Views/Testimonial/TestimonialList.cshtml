@model List<Testimonial>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Areas/Admin/Views/AdminDefault/Index.cshtml";
}

<div class="card-header">
    <div class="card-title">Referanslarımız</div>
</div>
<div class="card-body">
    <div class="card-sub">
        Referanslar ile ilgili işlemleri buradan yapabilirsiniz.
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">İsim Soyisim</th>
                <th scope="col">Mesleği</th>
                <th scope="col">Açıklaması</th>
                <th scope="col">Resim Yolu</th>
                <th scope="col">Puanı</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TestimonialId</td>
                    <td>@item.NameSurname</td>
                    <td>@item.Status</td>
                    <td>@item.Description</td>
                    <td><img src="@item.ImageUrl" width="75px" height="75px" class="img rounded-circle" /></td>
                    <td>@item.Stars</td>
                    <td><a onclick="deleteTestimonial(@item.TestimonialId)" class="btn btn-warning">Sil</a></td>
                    <td><a href="/Admin/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-success">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Admin/Testimonial/CreateTestimonial/" class="btn btn-outline-success">Referans Oluştur</a>


    <script>
        function deleteTestimonial(id) {
            Swal.fire({
                title: "Silmek İstediğiniz Emin Misin?",
                text: "Bu işlem geri alınamaz!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Evet!"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/Admin/Testimonial/DeleteTestimonial/" + id;
                }
            });
        }
    </script>
</div>