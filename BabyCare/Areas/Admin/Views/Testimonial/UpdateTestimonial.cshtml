@model Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Areas/Admin/Views/AdminDefault/Index.cshtml";
}

<h1>Referans Güncelleme</h1>

<form method="post">
    <input type="hidden" asp-for="TestimonialId" class="form-control" readonly />
    <br />
    <label>Adı Soyadı</label>
    <input type="text" asp-for="NameSurname" class="form-control" />
    <br />
    <label>Mesleği</label>
    <input type="text" asp-for="Status" class="form-control" />
    <br />
    <label>Açıklaması</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <label>Puanı</label>
    <input type="text" asp-for="Stars" class="form-control" />
    <br />
    <label>Resim Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
    <button class="btn btn-success">Kaydet</button>
</form>